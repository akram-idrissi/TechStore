@model TechStore.Models.LoginViewModel;

@{
    ViewData["Title"] = "Login";
}


<div id="container">
    <div class="container">
        <!-- Breadcrumb Start-->
        <ul class="breadcrumb">
            <li><a href="@Url.RouteUrl("home")"><i class="fa fa-home"></i></a></li>
            <li><a href="@Url.RouteUrl("home")">Home</a></li>
            <li><a href="@Url.RouteUrl("login")">Login</a></li>
        </ul>
        <!-- Breadcrumb End-->
        <div class="row">
            <!--Middle Part Start-->
            <div  asp-validation-summary="All" id="content" class="col-sm-9">
                <h1 class="title">Account Login</h1>
                <form class="row" style="width: 130%;" method="post" asp-controller="Account" asp-action="Login">
                    <div class="col-sm-6" style="padding-right: 90px;">
                        <h2 class="subtitle">New Customer</h2>
                        <p><strong>Register Account</strong></p>
                        <p>By creating an account you will be able to shop faster, be up to date on an order's status,
                            and keep track of the orders you have previously made.</p>
                        <a href="@Url.RouteUrl("register")" class="btn btn-primary">Continue</a>
                    </div>
                    <div class="col-sm-6">
                        <h2 class="subtitle">Returning Customer</h2>
                        <p><strong>I am a returning customer</strong></p>
                        <div class="form-group">
                            <label class="control-label" for="input-email">Username</label>
                            <input asp-for="username" placeholder="username" id="input-email"
                                class="form-control" />
                            <div class="col">
                                <span asp-validation-for="username" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="input-password">Password</label>
                            <input type="password" asp-for="password" placeholder="password" id="input-password"
                                class="form-control" />

                            <div class="col">
                                <span asp-validation-for="password" class="text-danger"></span>
                            </div>

                            <br />
                            <input type="submit" value="Login" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
                <!--Middle Part End -->
            </div>
        </div>
    </div>

</div>