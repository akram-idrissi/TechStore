@model TechStore.Models.RegisterViewModel;

@{
    ViewData["Title"] = "Register";
}


<div class="container">
    <div class="container">
        <!-- Breadcrumb Start-->
        <ul class="breadcrumb">
            <li><a href="@Url.RouteUrl("home")"><i class="fa fa-home"></i></a></li>
            <li><a href="@Url.RouteUrl("home")">Home</a></li>
            <li><a href="@Url.RouteUrl("register")">Register</a></li>
        </ul>
        <!-- Breadcrumb End-->
        <div class="row">
            <!--Middle Part Start-->
            <div asp-validation-summary="All" class="col-sm-9" id="content">
                <h1 class="title">Register Account</h1>
                <p>If you already have an account with us, please login at the <a href="@Url.RouteUrl("login")">Login
                        Page</a>.</p>

                <form class="form-horizontal" method="post" asp-controller="Account" asp-action="Register">
                    <fieldset id="account">
                        <legend>Your Personal Details</legend>
                        <div style="display: none;" class="form-group required">
                            <label class="col-sm-2 control-label">Customer Group</label>
                            <div class="col-sm-10">
                                <div class="radio">
                                    <label>
                                        <input type="radio" checked="checked" value="1" name="customer_group_id">
                                        Default
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label for="input-lastname" class="col-sm-2 control-label">Username</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="input-lastname" placeholder="Username" asp-for="username">

                                <div class="col">
                                    <span asp-validation-for="username" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label for="input-email" class="col-sm-2 control-label">E-Mail</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="input-email" placeholder="E-Mail" asp-for="email">
                                <div class="col">
                                    <span asp-validation-for="email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label for="input-password" class="col-sm-2 control-label">Password</label>
                            <div class="col-sm-10">
                                <input class="form-control" id="input-password" placeholder="Password" 
                                    asp-for="password">
                                <div class="col">
                                    <span asp-validation-for="password" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label for="input-password" class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <input type="submit" class="form-control" id="input-confirm">
                            </div>
                        </div>
                    </fieldset>

                </form>
            </div>
            <!--Middle Part End -->
        </div>
    </div>
</div>